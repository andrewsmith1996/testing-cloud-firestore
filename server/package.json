{
  "name": "unit-testing-cloud-firestore",
  "scripts": {
    "build:functions": "tsc -p ./functions/tsconfig.build.json",
    "deploy:functions": "firebase deploy --only firestore",
    "deploy:rules": "firebase deploy --only functions",
    "lint:functions": "tslint -p ./functions",
    "lint:rules": "tslint -p ./rules",
    "lint": "yarn lint:functions && yarn lint:rules",
    "postinstall": "yarn --cwd './functions' install",
    "emulator:set-host": "FIRESTORE_EMULATOR_HOST=127.0.0.1:8080",
    "execute-tests:functions": "jest './functions'",
    "execute-tests:rules": "jest './rules'",
    "test": "yarn test:rules && yarn test:functions",
    "test:functions": "yarn build:functions && yarn emulator:set-host && firebase emulators:exec --only firestore,functions 'yarn execute-tests:functions'",
    "test:rules": "yarn emulator:set-host && firebase emulators:exec --only firestore 'yarn execute-tests:rules'",
    "validate:functions": "tsc -p ./functions --noEmit",
    "validate:rules": "tsc -p ./rules --noEmit",
    "validate": "yarn validate:functions && yarn validate:rules"
  },
  "dependencies": {
    "@firebase/testing": "^0.13.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/uuid": "^3.4.5",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.5.0"
  },
  "private": true
}
